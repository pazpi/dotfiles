(sleep 1s && conky) &
(sleep 1s && conky -c .conkyCLOCK) &
(sleep 2s && conky -c .conkyMPD) &
## Optionally enable screensaver
#(sleep 1s && xautolock -time 15 -locker 'xlock -mode blank') &
