## Battery Icon
(sleep 1s && cbatticon -u 20 -i notification -c "systemctl hybrid-sleep" -l 15 -r 3) &
(sleep 1s && volumeicon) &
#(sleep 1s && pcmanfm -d) &
#(sleep 5s && octopi-notifier) &
## Startup
#(sleep 1s && pnmixer) &

# [[ -f ~/.Xresources ]] && xrdb -merge ~/.Xresources
# urxvtd -q -f -o

